   var res =    await        axios({
  method: 'post',
  url: '/Home/ValidateMove',
  data:  { 
    'FromFen'  : Chessboard.objToFen(oldPos),
    'ToFen' : Chessboard.objToFen(newPos),
    'Game' :'aGame'}

  
});
